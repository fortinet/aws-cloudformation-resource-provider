{
    "typeName": "Fortinet::FortiGate::SystemDns",
    "description": "Update DNS records for A FortiGate",
    "sourceUrl": "https://github.com/fortinet/cloudformations-handlers",
    "definitions": {},
    "properties": {
        "FortigateIP": {
            "type": "string",
            "pattern": "[a-zA-Z0-9_.-]+"
        },
        "APIKey": {
            "type": "string",
            "description": "Token Generated by Fortigate",
            "pattern": "[a-zA-Z0-9_.-]+"
        },

        "Primary": {
            "description": "Primary DNS server IP address, default is FortiGuard server at 208.81.112.53.",
            "type": "string",
            "pattern": "^(?:[0-9]{1,3}.){3}[0-9]{1,3}$"
        },

        "Secondary": {
            "description": "Secondary DNS server IP address, default is FortiGuard server at 208.81.112.52.",
            "type": "string",
            "pattern": "^(?:[0-9]{1,3}.){3}[0-9]{1,3}$"
        }
    },
    "required": [
        "FortigateIP",
        "APIKey"
    ],

    "primaryIdentifier": [
        "/properties/Primary"
    ],
    "handlers": {
        "create": {
            "permissions": [
                "Dns:Create"
            ]
        },
        "update": {
            "permissions": [
                "Dns:Update"
            ]
        }
    }
}